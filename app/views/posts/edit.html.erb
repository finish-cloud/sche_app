<h2>スケジュール編集</h2>

<%= form_for @post do |f| %>
<table>
  <tr>
    <th><%= f.label :title, "タイトル" %></th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th> <%= f.label :date, "開始日" %></th>
    <td><%= f.date_field :start %></td>
  </tr>
  <tr>
    <th> <%= f.label :datet, "終了日" %></th>
    <td><%= f.date_field :finish %></td>
  </tr>
  <tr>
    <th> <%= f.label :allday, "終日" %></th>
    <td> <%= f.check_box :allday %>
      <br>終日の場合はチェックを入れてください</br>
    </td>
  </tr>
  <tr>
    <th> <%= f.label :content, "スケジュールメモ" %></th>
    <td><%= f.text_field :content %></td>
  </tr>
</table>
<div>
  <ul>
    <li><%= f.submit "編集を完了する" %></li>
    <li><%= link_to "ユーザー情報一覧に戻る", :posts %></li>
  </ul>
</div>
<% end %>